{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build test",
            "windows": {
                "command": "${workspaceFolder}/test/build.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Sandbox",
            "windows": {
                "command": "${workspaceFolder}/sandbox/build.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}/sandbox"
            },
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "${workspaceFolder}/build.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}